<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/header') %>
<body>
	<!-- Banner -->
	<div class="banner">
		<img src="../public/images/products/img-home-banner.jpg" alt="">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">- Novedades -</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<%for (let index = 0; index < 4; index++) { %>		
			
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="../product/<%= zapatillas[index].id %>">
						<figure class="product-box_image">
							<img src="<%= zapatillas[index].imagen %>" alt="cafetera moulinex">
						</figure>
						<article class="product-box_data">
							<h2><%= zapatillas[index].nombre %></h2>
							<p><%= zapatillas[index].descripcionCorta %></p>
							<p>Comentarios: 12</p>
						</article>
					</a>
				</section>
			</div>
			<%}%>
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">- Más comentados -</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<%for (let index = 4; index < 8; index++) { %>		
			
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="../product/<%= zapatillas[index].id %>">
							<figure class="product-box_image">
								<img src="<%= zapatillas[index].imagen %>" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2><%= zapatillas[index].nombre %></h2>
								<p><%= zapatillas[index].descripcionCorta %></p>
								<p>Comentarios: 12</p>
							</article>
						</a>
					</section>
				</div>
				<%}%>
		</div>
	</div>
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>