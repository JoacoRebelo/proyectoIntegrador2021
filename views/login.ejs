<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/header') %>
<body>
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ingresar</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12">
				<form action="/login" method="POST" class="row g-3 align-items-center">
					<div class="form-group col-12">
						<p>Email</p>
					  <input type="email" class="form-control col-12 p-4" id="" placeholder="Email" name="email" >
					  <% if(locals.errors){  %> 
						<p class= “error” style="color: red; font-weight: normal;"> <%= errors.message %> </p>
					 <% } %>
					</div>
					<div class="form-group col-12">
						<p>Contraseña</p>
					  <input type="password" class="form-control col-12 p-4" id="" placeholder="Contraseña" name="pass">
					  <% if(locals.errors){  %> 
						<p class= “error” style="color: red; font-weight: normal;"> <%= errors.message2 %> </p>
					 <% } %>
					</div>
					Recordame <input type="checkbox" name="remember" id="">
					<div class="pl-4">
						<input type="submit" value="Ingresar" class="btn btn-primary">
					</div>
					
					<br>
					<br>
					<p class="pl-4">¿No tenés una cuenta? <a href="/register">Registrate acá</a> </p>
			</form>
			</h2>
		</div>
	</div>
	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>