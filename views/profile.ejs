<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/header') %>
<body>
	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/<%=usuarios.url%>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= usuarios.name %>
						<a href="/profile-edit">
						<i class="fas fa-cog"></i>
						</a>
					</h1>
				</div>
				<div>
					<ul class="">
						<li><%=usuarios.producto.length%> productos</li>
						<li><%=usuarios.comentario.length%> comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<%for (let index = 0; index < usuarios.producto.length; index++) { %>		
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="../product/<%= usuarios.producto[index].id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= usuarios.producto[index].url %>" alt="">			
							</figure>
							<article class="product-box_data">
								<h2><%= usuarios.producto[index].name %></h2>
								<p>Comentarios: <%= usuarios.producto[index].comentario.length %> </p>
							</article>
						</a>
					</section>
				</div>
				<%}%>
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>